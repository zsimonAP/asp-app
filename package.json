{
  "name": "associated-pension-automation-hub",
  "version": "1.0.23",
  "description": "Associated Pension Automation Hub with Next.js and Electron",
  "main": "main.js",
  "scripts": {
    "start": "next start",
    "build": "next build",
    "dev": "next dev",
    "electron:dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "next build && electron-builder"
  },
  "author": "Zachary Simon",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "electron-log": "^5.1.6",
    "electron-updater": "^6.2.1",
    "next": "latest",
    "postcss": "^8.4.39",
    "react": "latest",
    "react-dom": "latest",
    "tailwindcss": "^3.4.6"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "electron": "^25.3.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "wait-on": "^6.0.0"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "build": {
    "appId": "com.zacharysimon.associated-pension-automation-hub",
    "files": [
      "app/**/*",
      "backend/**/*",
      "public/**/*",
      "main.js",
      "preload.js",
      ".next/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "env/",
        "to": "env/"
      },
      {
        "from": "backend/",
        "to": "backend/"
      },
      {
        "from": "next.config.mjs",
        "to": "next.config.mjs"
      }
    ],
    "asarUnpack": [
      "**/env/**",
      "**/backend/**"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "identity": null,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["zip"],
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "owner": "zsimonAP",
      "repo": "asp-app"
    }
  }
}

